<%= semantic_form_for(@board) do |f| %>
  <%= f.inputs  do %>
    <%= f.input :name %>
    <%= f.input :position %>
    <%= f.input :background_color %>
    <%= f.input :background_image, :as => :file %>
    <%= f.input :status %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>
